<?xml version="1.0" encoding="utf-8"?>
<commands>

  <!-- Adventure is the category used by the game when walking around. -->
  <navcategory ID="Adventure">
    <layer ID="System"/>
    <layer ID="UI"/>
    <layer ID="Adventure"/>
    <layer ID="AdventureNav"/>
    <layer ID="AdventureLooker"/>
    <layer ID="AdventureTargeting"></layer>
    <layer ID="Dynamic"/>
  </navcategory>

  <!-- Generic UI Menu, unless you need something special this is a good baseline for a new screen. -->
  <navcategory ID="Menu">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="CategoryNav" />
    <layer ID="AdventureNav"/>
    <layer ID="Menus"/>
  </navcategory>

  <!-- Generic UI Menu, unless you need something special this is a good baseline for a new screen. -->
  <navcategory ID="StatusScreens">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="CategoryNav" />
    <layer ID="AdventureNav"/>
    <layer ID="Menus"/>
    <layer ID="StatusScreens"></layer>
  </navcategory>

  <navcategory ID="StatusScreens:Charsheet">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="CategoryNav" />
    <layer ID="AdventureNav"/>
    <layer ID="Menus"/>
    <layer ID="StatusScreens"></layer>
    <layer ID="StatusScreens:Charsheet"></layer>
  </navcategory>

  <!-- Generic UI Menu, unless you need something special this is a good baseline for a new screen. -->
  <navcategory ID="Popup">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="AdventureNav"/>
    <layer ID="Menus"/>
  </navcategory>

  <!-- Chargen adds some additional keybinds (random, etc) -->
  <navcategory ID="Chargen">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="CategoryNav" />
    <layer ID="Menus"/>
    <layer ID="Chargen"/>
  </navcategory>

  <!-- Looker mode binds, with most adventure binds disabled -->
  <navcategory ID="Looker">
    <layer ID="UI"/>
    <layer ID="UINav"></layer>
    <layer ID="Menus"/>
    <layer ID="AdventureNav"/>
    <layer ID="AdventureLooker"/>
    <layer ID="Targeting"/>
  </navcategory>

  <!-- Targeting mode binds, with most adventure binds disabled -->
  <navcategory ID="Targeting">
    <layer ID="UI"/>
    <layer ID="UINav"></layer>
    <layer ID="Menus"/>
    <layer ID="Targeting"/>
    <layer ID="AdventureNav"/>
    <layer ID="AdventureTargeting"></layer>
  </navcategory>

  <!-- Additional commands for Conversation -->
  <navcategory ID="Conversation">
    <layer ID="UI"/>
    <layer ID="UINav"/>
    <layer ID="Menus"/>
